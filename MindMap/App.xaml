        <ResourceDictionary>
            <local:SelectionToBorderBrushConverter x:Key="SelectionToBorderBrushConverter"/>
            <local:SelectionToBorderThicknessConverter x:Key="SelectionToBorderThicknessConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
